# .env.example - Environment Variables Template for The Power100 Experience

# =============================================================================
# CLAUDE CODE CONFIGURATION
# =============================================================================

# GitHub Integration for Claude Code
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=your-username/the-power100-experience

# MCP Server Configuration  
BRAVE_API_KEY=your_brave_search_api_key_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Claude Code Safety Settings
CLAUDE_BRANCH_PREFIX=claude/
CLAUDE_AUTO_COMMIT=true
CLAUDE_BACKUP_BEFORE_MAJOR_CHANGES=true
CLAUDE_MAX_FILES_PER_COMMIT=10

# =============================================================================
# APPLICATION ENVIRONMENTS
# =============================================================================

# Development Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Staging Environment
NEXT_PUBLIC_STAGING_URL=https://staging.power100experience.com

# Production Environment  
NEXT_PUBLIC_PRODUCTION_URL=https://power100experience.com

# =============================================================================
# DATABASE CONFIGURATION (When Backend is Built)
# =============================================================================

# Database Connection
DATABASE_URL=postgresql://username:password@localhost:5432/power100_experience
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=power100_experience
DATABASE_USER=power100_user
DATABASE_PASSWORD=your_secure_password_here

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# SMS Verification (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@power100experience.com

# Alternative Email Service (AWS SES)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@power100experience.com

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here
SESSION_DOMAIN=power100experience.com

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# PARTNER INTEGRATION
# =============================================================================

# Partner Subdomain Configuration
PARTNER_SUBDOMAIN_BASE=partners.power100experience.com
PARTNER_EMAIL_DOMAIN=power100experience.com

# PowerConfidence Scoring
CONFIDENCE_SCORING_ENABLED=true
QUARTERLY_REVIEW_ENABLED=true

# Demo Booking Integration
DEMO_BOOKING_ENABLED=true
AUTO_EMAIL_INTRODUCTIONS=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME=The-Power100-Experience

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Debug Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_QUERY_LOGGING=true

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/power100_experience_test
ENABLE_TEST_ROUTES=true

# Development Server
DEV_SERVER_PORT=3000
API_SERVER_PORT=3001

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Settings
BUILD_ANALYZE=false
GENERATE_SOURCEMAP=false

# CDN Configuration
CDN_URL=https://cdn.power100experience.com
ASSETS_CDN_URL=https://assets.power100experience.com

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Contractor Flow Features
ENABLE_SMS_VERIFICATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AI_COACHING_OPTIN=true

# Partner Features
ENABLE_PARTNER_MATCHING=true
ENABLE_CONFIDENCE_SCORING=true
ENABLE_QUARTERLY_REVIEWS=true

# Admin Features
ENABLE_ADMIN_DASHBOARD=true
ENABLE_ANALYTICS_EXPORT=true
ENABLE_BULK_OPERATIONS=true

# Beta Features
ENABLE_ADVANCED_MATCHING=false
ENABLE_REAL_TIME_CHAT=false
ENABLE_VIDEO_INTRODUCTIONS=false

# =============================================================================
# INSTRUCTIONS FOR SETUP
# =============================================================================

# 1. Copy this file to .env.local (for local development)
# 2. Copy this file to .env.staging (for staging environment)  
# 3. Copy this file to .env.production (for production environment)
# 4. Fill in all the required values for your environment
# 5. Never commit .env files to Git (they're in .gitignore)
# 6. Use environment-specific values for each deployment
# 7. Rotate secrets regularly for security

# =============================================================================
# SECURITY NOTES
# =============================================================================

# - Generate strong, unique secrets for each environment
# - Use different database credentials for each environment
# - Rotate API keys and secrets regularly
# - Never use production secrets in development
# - Use environment variables in your deployment platform
# - Consider using a secrets management service for production